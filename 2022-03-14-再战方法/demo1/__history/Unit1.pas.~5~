unit Unit1;

interface

type
    TAnimal = class
    public
        procedure Talk();

        {虚拟方法}
        function Run(): Integer; virtual;
    end;

    TDog = class(TAnimal)  {父调用}
    public
        function Run(): Integer;  {父类重写}
    end;

implementation

{ TPesion }

function TAnimal.Run: Integer;
begin
{一般情况下，父类的虚拟方法会有一个空实现，为子类覆盖用}

end;

procedure TAnimal.Talk;
begin
    Writeln('Talk');
end;

{ TUser }

function TDog.Run: Integer;
begin
  Writeln('用四条腿跑');
end;

end.

