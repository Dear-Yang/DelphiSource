unit uThreads;

interface

uses
    System.Classes;

type
    Twork = class(TThread)
    private    { Private declarations }
    protected
        procedure Execute; override;
    public
        procedure Operation;
    end;

implementation

{ Twork }

procedure Twork.Execute;
begin
end;

procedure Twork.Operation;
var
    Num: Integer;
begin
    for Num := 1 to 10000000 do begin
        Form1.Label1.Caption := Num.ToString;
        //œﬂ≥Ã–›√ﬂ100∫¡√Î
        TThread.Sleep(600);
    end;
end;

end.

