program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
    System.SysUtils;

{定义记录类型}
type
  {定义一个学生的记录类型,c结构体}
    TStudent = record
        Id: Integer;   //学号
        Name: string;   //姓名

    end;

    {数组:存储信息}
    TStudentList = array of TStudent;

var       //定义变量
    {真正存储学生信息的数组}
    StudentList: TStudentList;

{添加一条学生信息}
procedure AddStudent();
var
    Student: TStudent;
    ArrayLength: Integer;
    Name:string;
begin
    {获取学生信息列表中的信息个数}
    ArrayLength := Length(StudentList);

    Writeln('您选择了添加功能,请输入学生姓名：');

    Student.Id := 100;

    {**已更改：将用户输入的学生姓名赋值给记录类型的Name变量}
    Readln(Name);

    {将学生信息保存到数组中，保存}
    StudentList[ArrayLength - 1] := Student;

    {如果添加之后的元素个数大于添加之前的，则认为添加成功}
    if Length(StudentList) > ArrayLength then begin
        Writeln('添加成功！');
    end
    else begin
        Writeln('添加失败！');
    end;

end;

{选择菜单}
procedure ShowMenu();
begin
    Writeln('');
    Writeln('*************学生信息管理系统*************');
    Writeln('1、添加信息');
    Writeln('2、删除信息');
    Writeln('3、查询信息');
    Writeln('4、修改信息');
    Writeln('');
    Writeln('******************************************');
end;

{用户功能选择}
procedure userChoose();
var
    UserChooseIndex: Integer;
begin
    Writeln('请选择您要使用的功能：');
    {获取用户输入的编号}
    Readln(UserChooseIndex);
    {判断用户输入的编号是多少}
    case UserChooseIndex of
        1:
            begin
                AddStudent();
            end;
        2:
            begin
                Writeln('您选择了删除功能,');
            end;
        3:
            begin
                Writeln('您选择了查询功能,');
            end;
        4:
            begin
                Writeln('您选择了修改功能,');
            end;
    else
        begin
            Writeln('请选择正确的功能编号！');
        end;

    end;
end;

begin
    {初始化学生信息列表}
    StudentList := [];
    {无限循环}
    while True do begin
        ShowMenu();
        userChoose();
    end;

    Readln;
end.

